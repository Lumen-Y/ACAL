@using CalendarView.Shared.Models
@inherits Microsoft.AspNetCore.Components.LayoutComponentBase
@inject Design Design

<style>
	article.no-padding {
		padding-left: 0 !important;
		padding-right: 0 !important;
		padding-top: 0 !important;
		padding-bottom: 0 !important;
	}

	.event-card {
	  background-color: #3a0d22;
	  color: #ffffff;
	  border-left: 5px solid #ff4081;
	  padding: 2px 4px;
	  border-radius: 10px;
	  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
	  display: flex;
	  flex-direction: column;
	  gap: 2px;
	  width: 100%;
	}


	.flow-grid-container {
		display: grid;
		grid-template-columns: auto auto auto;
		gap: 10px;
		color: @Design.ForeColorName;
	}

	.grid-container {
		display: grid;
		grid-template-areas:
			"header header"
			"menu content"
			"footer footer";
		grid-template-columns: 2fr 3fr;
		padding: 2px;
		color: @Design.ForeColorName;
	}

	.grid-container div {
			padding: 2px;
	}

	.grid-container div.header {
		grid-area: header;
		text-align: center;
	}

	.grid-container div.menu {
		grid-area: menu;
	}

	.grid-container div.content {
		grid-area: content;
	}

	.grid-container div.footer {
		grid-area: footer;
		text-align: center;
	}

</style>

<div class="page" style="background: @Design.Background;">
	<!--
	<div class="sidebar">
		<NavMenu/>
	</div>
	-->
	<main>
		<!--
		<div class="top-row px-4">
			<a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
		</div>
		-->
		<article class="content no-padding">
			@Body
		</article>
	</main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
